<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- My CSS -->
    <link rel="stylesheet" href="style.css" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <title>Warteg</title>
  </head>
  <body>
    <%- include("./component/navbar.ejs") %>
    <div class="container" style="margin-top: 30px">
      <section id="content" class="mb-5 mt-5">
        <div class="container">
          <!-- MakananKering -->
          <div class="row">
            <div class="col">
              <p class="fs-5 mb-4">Makanan Kering</p>
            </div>
          </div>
          <div class="row">
            <!-- ReadData -->
            <% if (data.length){ let no =0; for(let i = 0; i< data.length; i++){
            no++; if(data[i].category_name=='Makanan Kering'){ %>
            <div class="col-3">
              <div class="card">
                <img
                  src="img/<%= data[i].image%>"
                  class="card-img-top"
                  alt="pepes"
                  style="width: auto; height: 220px; object-fit: cover"
                />
                <div class="card-body">
                  <h5 class="card-title"><%= data[i].name%></h5>
                  <p class="card-text">Stok : <%= data[i].stock%></p>
                  <a
                    href="/buy/<%= data[i].id%>"
                    class="btn btn-primary"
                    style="margin-right: 10px"
                  >
                    Buy
                  </a>
                  <a
                    href="/edit-food/<%= data[i].id%>"
                    class="btn btn-warning"
                    style="margin-right: 10px"
                  >
                    Edit
                  </a>
                  <a
                    href="/process-delete-food/<%= data[i].id%>"
                    class="btn btn-danger"
                    style="margin-right: 10px"
                  >
                    Delete
                  </a>
                </div>
              </div>
            </div>
            <% }} } %>
          </div>
        </div>
      </section>
      <!-- Makanan Kuah -->
      <section id="content" class="mb-5">
        <div class="container">
          <div class="row">
            <div class="col">
              <p class="fs-5 mb-4">Makanan Kuah</p>
            </div>
          </div>
          <div class="row">
            <% if (data.length){ let no =0; for(let i = 0; i< data.length; i++){
            no++; if(data[i].category_name=='Makanan Berkuah'){ %>
            <div class="col-3">
              <div class="card">
                <img
                  src="img/<%= data[i].image%>"
                  class="card-img-top"
                  alt="pepes"
                  style="width: auto; height: 220px; object-fit: cover"
                />
                <div class="card-body">
                  <h5 class="card-title"><%= data[i].name%></h5>
                  <p class="card-text">Stok : <%= data[i].stock%></p>
                  <a
                    href="/buy/<%= data[i].id%>"
                    class="btn btn-primary"
                    style="margin-right: 10px"
                  >
                    Buy
                  </a>
                  <a
                    href="/edit-food/<%= data[i].id%>"
                    class="btn btn-warning"
                    style="margin-right: 10px"
                  >
                    Edit
                  </a>
                  <a
                    href="/process-delete-food/<%= data[i].id%>"
                    class="btn btn-danger"
                    style="margin-right: 10px"
                  >
                    Delete
                  </a>
                </div>
              </div>
            </div>
            <% }} } %>
            <!-- EndReadData -->
          </div>

          <!-- ButtonModalDelete -->
          <button
            type="button"
            class="btn btn-primary mt-3"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
          >
            Launch demo modal
          </button>
          <!-- EndButtonModalDelete -->
        </div>
      </section>
    </div>

    <!-- ModalDelete -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">...</div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    <!-- EndModalDelete -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
